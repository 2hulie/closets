        </FrameLayout>

        <!-- Black Color Circle with Checkmark -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="11dp">
            <ImageView
                android:id="@+id/color_black"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/circle_black"
                android:contentDescription="@string/black"
                android:clickable="true"
                android:focusable="true" />
            <ImageView
                android:id="@+id/checkmark_black"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/color_check"
                android:layout_gravity="center"
                android:visibility="gone" />
        </FrameLayout>

    </GridLayout>

    <!-- Center the buttons by setting the gravity to center -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:weightSum="5">

        <!-- Apply Button -->
        <ImageView
            android:id="@+id/btn_apply"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_apply_small"
            android:contentDescription="@string/apply"
            android:padding="0dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="15dp" />

        <!-- Cancel Button -->
        <ImageView
            android:id="@+id/btn_reset"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_reset_small"
            android:contentDescription="@string/reset"
            android:padding="0dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

</LinearLayout>