<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/faded_pink"
    tools:context=".ui.items.ItemsFragment">

    <!-- FrameLayout containing ImageView and dynamic TextViews -->
    <FrameLayout
        android:id="@+id/current_items_image_frame"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="-5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- ImageView for lbl_current.png -->
        <ImageView
            android:id="@+id/current_items_image"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginTop="-5dp"
            android:contentDescription="@string/current_items_image"
            android:scaleType="fitCenter"
            android:src="@drawable/lbl_items"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- TextView for the current date -->
        <TextView
            android:id="@+id/current_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="January 1, 2000"
            android:textSize="11sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="9dp"
            tools:ignore="HardcodedText" />

        <!-- TextView for the "What are you wearing today?" text -->
        <TextView
            android:id="@+id/wearing_today_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What are you wearing today?"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText" />


    </FrameLayout>

    <LinearLayout
        android:id="@+id/search_and_filter_layout"
        android:layout_width="357dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/current_items_image_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp">

        <!-- Search Field with Background and Hint -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/search_field"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <!-- Search Input Text -->
            <EditText
                android:id="@+id/search_input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/search_hint"
                android:background="@android:color/transparent"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textSize="18sp"
                android:textColor="@color/base_text"
                android:textColorHint="#E1BBC2"
                android:padding="0dp"
                android:gravity="center_vertical"
                tools:ignore="NestedWeights" />
        </LinearLayout>

        <!-- Search Icon -->
        <ImageView
            android:id="@+id/icon_search"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_search"
            android:contentDescription="@string/search_icon_description"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="10dp" />

        <!-- Filter Icon with Text -->
        <LinearLayout
            android:id="@+id/btn_filter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/filterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="2dp"
                tools:ignore="UseCompoundDrawables,UselessParent">

                <!-- Filter Icon -->
                <ImageView
                    android:id="@+id/filter_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_filter"
                    android:contentDescription="@string/filter_icon_description"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginTop="1dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- RecyclerView for displaying items -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_current_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/item_background"
        android:clipToPadding="false"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:scrollbars="none"
        android:paddingBottom="180dp"
        app:layout_constraintTop_toBottomOf="@id/search_and_filter_layout"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Add an empty message TextView -->
    <TextView
        android:id="@+id/emptyMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:gravity="center"
        android:textColor="#5E4E4E"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        />

    <TextView
        android:id="@+id/text_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- ImageView for save icon -->
    <ImageView
        android:id="@+id/save_icon"
        android:layout_width="190dp"
        android:layout_height="80dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/icon_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp" />

</androidx.constraintlayout.widget.ConstraintLayout>