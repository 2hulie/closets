<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.data.DataFragment">

    <!-- ImageView for lbl_data.png -->
    <ImageView
        android:id="@+id/data_image"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="-5dp"
        android:contentDescription="@string/data_image"
        android:scaleType="fitCenter"
        android:src="@drawable/lbl_data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ImageView for Import Closet icon -->
    <ImageView
        android:id="@+id/icon_import"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/icon_import"
        android:contentDescription="@string/import_icon"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toStartOf="@+id/icon_export"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/data_image"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <!-- ImageView for Export Closet icon -->
    <ImageView
        android:id="@+id/icon_export"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="35dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/icon_export"
        android:contentDescription="@string/export_icon"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toEndOf="@id/icon_import"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/data_image" />

    <TextView
        android:id="@+id/text_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
