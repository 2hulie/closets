<!-- res/drawable/spinner_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#55000000" /> <!-- Shadow color with transparency -->
            <corners android:radius="2dp" /> <!-- Rounded corners for the shadow -->
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="4dp" /> <!-- More padding at the bottom for a softer shadow -->
        </shape>
    </item>

    <!-- White Background -->
    <item android:top="1dp" android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="4dp" /> <!-- More rounded corners for the background -->
        </shape>
    </item>
</layer-list>